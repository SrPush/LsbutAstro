---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SliderP from "../components/Slider-P.astro";
import Footer from "../components/Footer.astro";

---

<Layout title="LsCubeShop.">
	<Header />

	<main>
		<SliderP />
	</main>

	<Footer />
