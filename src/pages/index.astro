---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SliderP from "../components/Slider-P.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
---

<Layout title="LsCubeShop.">
	<Header />

	<main>
		<SliderP />
	</main>
	<section class="cb-pop">
		<div class="ct-crd">
			<Card cbName="MoYu RS3M 2020" srcImg="/Rs3m20.png" price="60000"/>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	main {
		width: 100%;
		min-height: 100vh;
		padding-top: 10vh;
		background-image: radial-gradient(circle at 50% 5%, #b76e2d, #1f140e);
		background-repeat: no-repeat;
		background: cover;
	}

	.ct-crd {
		width: 100%;
		height: 300vh;
		background: rgba(43, 31, 17, 0.644);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(10px);
		padding: 0.5%;

		border-inline: 2px solid #fffffff1;
		border-top: 2px solid #fffffff1;
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
	}
</style>
